<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_main_logo_front"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Logged In As: [User]"
        android:textSize="9pt"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/last_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Last Login: [ddmmyy hhiisa]"
        android:textSize="7pt"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/punch_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Punch Card Status: Loading..."
        android:textSize="7pt"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/sess_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Session ID: Loading..."
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="7pt"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/punch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Punch Date: Loading..."
        android:textSize="7pt"
        android:layout_marginBottom="20dp"/>

</LinearLayout>